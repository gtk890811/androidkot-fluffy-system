        <activity
            android:name=".view.ui.TabActivity"
            android:label="@string/title_activity_tab" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

