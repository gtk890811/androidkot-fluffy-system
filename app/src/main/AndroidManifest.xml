        </activity>

        <activity
            android:name=".view.ui.SigninActivity"
            android:label="@string/title_activity_signin" />

        <activity
            android:name=".view.ui.MainActivity"
            android:label="@string/title_activity_main" />

        <activity
            android:name=".view.ui.DrawerActivity"
